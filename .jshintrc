// Same options used on https://github.com/wikimedia/mediawiki-core/blob/master/.jshintrc
{

	// Enforcing
	"bitwise": true,
	"eqeqeq": true,
	"es3": true,
	"freeze": true,
	"latedef": true,
	"noarg": true,
	"nonew": true,
	"unused": true,
	"strict": false,
	"undef": true,
	"unused": false,

	// Relaxing
	"laxbreak": true,
	"multistr": true,
	"sub": true,

	// Environment
	"browser": true,
	"devel": true,

	"globals": {
		"mediaWiki": false,
		"jQuery": false,
		"QUnit": false,
		"JSON": false,
		"wikiLabels": true,
		"OO": false,
		"CodeMirror": false,
		"YAML": false
	},

	// Legacy (to be handled by jscs once supported)
	"camelcase": true,
	"nomen": true
}
